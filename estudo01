print('Hello World!') # Lança um comando de escrever
print(7+4) # Não ultiliza aspas porque é calculo
print('7'+'4') # Junta números

# Toda váriavel é um objeto
# O + só serve para juntar mensagem
nome='Kauã'
idade='21'
peso="70 kg"
print(nome , idade , peso) 

# Input serve nesse caso para criar um questionario
comanda= input('Qual a comanda?')
mesa= input('Qual a mesa do cliente?')
pedido= input('Qual o pedido?')
print('Comanda:' , comanda)
print('Mesa:' , mesa) 
print('Pedido:' , pedido)

